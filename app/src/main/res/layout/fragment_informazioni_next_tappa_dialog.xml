            android:textColor="@color/testo"
            android:layout_marginLeft="15dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView_infoLinea"
