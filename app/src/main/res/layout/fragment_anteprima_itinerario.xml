<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#e0f2f1"
    tools:context=".HomeActivity$PlaceholderFragment">

    <!-- Login progress -->

    <ScrollView android:id="@+id/login_form" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false">

        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Nome itinerario"
                    android:id="@+id/nomeItinerario" />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:weightSum="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valutazione"
                    android:id="@+id/textViewValutazione"
                    android:width="70dp"
                    android:layout_weight="0.36" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/valutazione" />

            </LinearLayout>

            <Button
                style="@style/MyButton"
                android:background="@drawable/selector_button"
                android:id="@+id/btnAvviaItinerario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Avvia"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />

            <Button
                style="@style/MyButton"
                android:background="@drawable/selector_button"
                android:id="@+id/btnAcquistaItinerario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Acquista"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:weightSum="1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Feedback:"
                    android:id="@+id/textViewFeedback"
                    android:width="70dp"
                    android:layout_weight="0.36" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/feedback"
                    android:layout_weight="0.36" />
            </LinearLayout>

            <Button
                style="@style/MyButton"
                android:background="@drawable/selector_button"
                android:id="@+id/btnInviaFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invia feed"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal" />

            <Button
                style="@style/MyButton"
                android:background="@drawable/selector_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indietro"
                android:textStyle="bold"
                android:id="@+id/btn_indietro"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                 />

            <Button
                style="@style/MyButton"
                android:background="@drawable/selector_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuoricino"
                android:textStyle="bold"
                android:id="@+id/btn_desidera"
                android:visibility="gone"
                />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>