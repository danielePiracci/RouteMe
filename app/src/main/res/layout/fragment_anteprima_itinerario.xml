<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0f2f1"
    android:orientation="vertical"
    tools:context=".HomeActivity$PlaceholderFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:paddingRight="5dp"
        android:layout_gravity="right">
        <Button
            style="@style/MyButton"
            android:layout_width="25dp"
            android:background="@drawable/arrow3"
            android:layout_height="25dp"
            android:id="@+id/btn_indietro"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textStyle="bold"
                    android:text="Nome itinerario"
                    android:layout_gravity="center"
                    android:id="@+id/nomeItinerarioCard" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/autore" />

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Valutazione: "
                    android:textSize="8pt"
                    android:id="@+id/textViewValutazione"/>

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="?android:attr/ratingBarStyleSmall"
                    android:id="@+id/valutazione" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CittÃ : "
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/citta_anteprima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text=""
                    android:textSize="8pt" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tags: "
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/tag_anteprima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text=""
                    android:textSize="8pt" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Durata: "
                    android:textSize="8pt" />

                <TextView
                    android:id="@+id/durata_anteprima"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:text=""
                    android:textSize="8pt" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">


                <Button
                    style="@style/MyButton"
                    android:background="@drawable/selector_button"
                    android:id="@+id/btnAvviaItinerario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Avvia"
                    android:textStyle="bold"
                    android:layout_gravity="center" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="8pt"
                    android:text="Descrizione: "
                    android:id="@+id/textViewDescrizioneAnteprima"/>

                <com.ms.square.android.expandabletextview.ExpandableTextView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:expandableTextView="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/expand_text_view"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    expandableTextView:maxCollapsedLines="4"
                    expandableTextView:animDuration="200">
                    <TextView
                        android:id="@id/expandable_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="8pt"
                        android:textColor="#000" />
                    <ImageButton
                        android:id="@id/expand_collapse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:layout_gravity="right|bottom"
                        android:background="@color/transparent"/>
                </com.ms.square.android.expandabletextview.ExpandableTextView>



            </LinearLayout>

            <Button
                style="@style/MyButton"
                android:background="@drawable/selector_button"
                android:id="@+id/btnAcquistaItinerario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Acquista"
                android:textStyle="bold"
                android:visibility="gone"
                android:layout_gravity="center_horizontal" />

            <Button
                style="@style/MyButton"
                android:background="@drawable/selector_button"
                android:id="@+id/btnInviaFeedback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invia feedback"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"/>

            <Button
                style="@style/MyButton"
                android:background="@drawable/selector_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cuoricino"
                android:textStyle="bold"
                android:id="@+id/btn_desidera"
                android:visibility="gone"
                />
        </LinearLayout>
    </ScrollView>

</LinearLayout>