<resources>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@color/testo</item>
        <item name="background">@color/testo</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppThemeV21" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="MyButton">
        <item name="android:textColor">#FFF</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="MySeekBar">
        <item name="android:textColor">@color/testo</item>
    </style>

    <style name="MySectionTheme">
        <item name="sectionColorIcon">#000</item>
        <item name="sectionColorText">#000</item>
        <item name="sectionColorNotification">#000</item>
        <item name="sectionBackgroundColorPressed">#C0C0C0</item>
        <item name="sectionBackgroundColorSelected">#C0C0C0</item>
        <item name="sectionBackgroundColor">#000000FF</item>
    </style>

    <style name="MyNavigationDrawerTheme" parent="MaterialNavigationDrawerTheme" >
        <!-- Other customization -->
        <item name="colorPrimary">@color/testo</item>
        <item name="colorPrimaryDark">#00695c</item>
        <item name="android:textColor">#009688</item>
        <item name="drawerColor">#fff</item>
        <item name="sectionStyle">@style/MySectionTheme</item>
        <item name="singleAccount">true</item>
        <item name="learningPattern">false</item>
        <item name="toolbarElevation">true</item>
    </style>

    <style name="Item" parent="">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Item.Tumblr">
        <item name="android:layout_width">@dimen/item_circle_size_tumblr</item>
        <item name="android:layout_height">@dimen/item_circle_size_tumblr</item>
        <item name="android:textSize">@dimen/item_font_size_tumblr</item>
        <item name="android:textColor">@color/tumblr_primary</item>
    </style>

    <style name="ToolTipLayoutCustomStyle">
        <item name="ttlm_padding">25dip</item>
        <item name="ttlm_strokeColor">@color/black</item>
        <item name="ttlm_backgroundColor">@color/white</item>
        <item name="ttlm_strokeWeight">1dip</item>
        <item name="ttlm_cornerRadius">8dip</item>
    </style>

</resources>
